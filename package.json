{
  "name": "tzdt",
  "version": "1.1.1",
  "description": "Simple Date wrapper with timezone",
  "author": {
    "name": "Yuhsak Inoue",
    "email": "yuhsak.inoue@gmail.com",
    "url": "https://github.com/Yuhsak"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yuhsak/tzdt.git"
  },
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "module": "lib/esm/index.js",
  "files": [
    "lib",
    "src",
    "!lib/**/*.tsbuildinfo",
    "tsconfig.json",
    "tsconfig.esm.json"
  ],
  "scripts": {
    "clean:dist": "rimraf lib",
    "clean:test": "rimraf coverage",
    "clean": "run-p clean:*",
    "check:tsc": "tsc --noEmit",
    "check:prettier": "prettier --check .",
    "check": "run-p check:*",
    "precheck": "npm run generate",
    "test": "jest",
    "pretest": "npm run generate",
    "build:watch": "npm run build -- --watch",
    "build": "tsc -b tsconfig.json tsconfig.esm.json",
    "prebuild": "run-p clean:dist generate",
    "prepublishOnly": "npm run build",
    "generate": "node timezone/generate.mjs"
  },
  "devDependencies": {
    "@swc/jest": "^0.1.4",
    "@types/jest": "^27.0.0",
    "@types/mkdirp": "^1.0.2",
    "jest": "27.0.6",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "sideEffects": [
    "./lib/timezones/*",
    "./lib/timezones/**/*",
    "./lib/esm/timezones/*",
    "./lib/esm/timezones/**/*"
  ]
}
